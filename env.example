# =============================================================================
# KIOSK BACKEND - Environment Variables Configuration
# =============================================================================
# این فایل شامل تمام تنظیمات مورد نیاز برای راه‌اندازی پروژه است.
# برای استفاده: این فایل را به .env کپی کنید و مقادیر را تنظیم کنید.
# =============================================================================

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# Secret Key برای Django - در Production حتماً تغییر دهید!
# برای تولید Secret Key جدید: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production

# حالت Debug - در Production باید False باشد
# True: نمایش خطاهای کامل، False: نمایش خطاهای عمومی
DEBUG=True

# Host های مجاز برای دسترسی به سرور
# برای Production: دامنه‌های واقعی را اضافه کنید
# مثال: example.com,www.example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# نام دیتابیس
DATABASE_NAME=kiosk_db

# نام کاربری دیتابیس
DATABASE_USER=kiosk_user

# رمز عبور دیتابیس - حتماً تغییر دهید!
DATABASE_PASSWORD=your_password_here

# آدرس هاست دیتابیس
# برای Docker: از 'db' استفاده کنید
# برای Local: از 'localhost' استفاده کنید
DATABASE_HOST=db

# پورت دیتابیس (PostgreSQL پیش‌فرض: 5432)
DATABASE_PORT=5432

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================

# نوع Gateway: 'mock' برای تست، 'pos' برای دستگاه POS واقعی
# گزینه‌ها: mock, pos
PAYMENT_GATEWAY_NAME=mock

# فعال/غیرفعال بودن Gateway
# True: Gateway فعال است، False: Gateway غیرفعال است
PAYMENT_GATEWAY_ACTIVE=True

# کلید API Gateway (در صورت نیاز)
PAYMENT_GATEWAY_API_KEY=

# Secret Key Gateway (در صورت نیاز)
PAYMENT_GATEWAY_API_SECRET=

# شناسه Merchant (برای POS واقعی)
PAYMENT_GATEWAY_MERCHANT_ID=300000001235935

# شناسه Terminal (برای POS واقعی)
PAYMENT_GATEWAY_TERMINAL_ID=30739260

# URL برای Callback پرداخت (در صورت نیاز)
PAYMENT_GATEWAY_CALLBACK_URL=

# =============================================================================
# MOCK GATEWAY CONFIGURATION
# =============================================================================
# این تنظیمات فقط زمانی استفاده می‌شوند که PAYMENT_GATEWAY_NAME=mock باشد

# تاخیر پرداخت Mock به ثانیه (برای شبیه‌سازی واقعی‌تر)
# پیش‌فرض: 3 ثانیه
MOCK_PAYMENT_DELAY=3

# آیا پرداخت Mock باید موفق باشد؟
# True: همیشه موفق، False: همیشه ناموفق
# پیش‌فرض: True
MOCK_PAYMENT_SUCCESS=True

# درصد موفقیت پرداخت Mock (0-100)
# 100: همیشه موفق، 0: همیشه ناموفق، 50: 50% موفق
# اگر تنظیم شود، MOCK_PAYMENT_SUCCESS را نادیده می‌گیرد
# پیش‌فرض: 100
MOCK_PAYMENT_SUCCESS_RATE=100

# =============================================================================
# POS CARD READER CONFIGURATION
# =============================================================================
# این تنظیمات فقط زمانی استفاده می‌شوند که PAYMENT_GATEWAY_NAME=pos باشد

# نوع اتصال به دستگاه POS
# گزینه‌ها: 'tcp' (شبکه) یا 'serial' (سریال)
POS_CONNECTION_TYPE=tcp

# =============================================================================
# POS - TCP CONNECTION (برای اتصال شبکه)
# =============================================================================

# آدرس IP دستگاه POS (برای اتصال TCP)
POS_TCP_HOST=192.168.1.100

# پورت دستگاه POS (پیش‌فرض: 1362)
POS_TCP_PORT=1362

# Timeout برای اتصال به POS (به ثانیه)
POS_TIMEOUT=30

# =============================================================================
# POS - SERIAL CONNECTION (برای اتصال سریال)
# =============================================================================

# پورت سریال (مثال: COM1 برای Windows، /dev/ttyUSB0 برای Linux)
POS_SERIAL_PORT=COM1

# نرخ Baudrate برای اتصال سریال (پیش‌فرض: 9600)
POS_SERIAL_BAUDRATE=9600

# =============================================================================
# POS - DLL CONFIGURATION (برای استفاده از DLL در Windows)
# =============================================================================

# استفاده از DLL برای اتصال به POS؟
# True: استفاده از DLL (فقط Windows)، False: استفاده از پروتکل مستقیم
POS_USE_DLL=False

# مسیر فایل DLL (مثال: ./pna.pcpos.dll یا C:/path/to/pna.pcpos.dll)
POS_DLL_PATH=./pna.pcpos.dll

# =============================================================================
# POS - BRIDGE SERVICE CONFIGURATION (برای اتصال به Windows Service)
# =============================================================================
# این روش برای اتصال از Mac/Linux به Windows Service که DLL را اجرا می‌کند

# استفاده از Bridge Service؟
# True: استفاده از Windows Bridge Service، False: اتصال مستقیم
POS_USE_BRIDGE=False

# آدرس IP ماشین Windows که Bridge Service روی آن اجرا می‌شود
POS_BRIDGE_HOST=192.168.1.50

# پورت Bridge Service (پیش‌فرض: 8081)
POS_BRIDGE_PORT=8081

# =============================================================================
# POS - ADVANCED CONFIGURATION
# =============================================================================

# فرمت پیام برای POS
# گزینه‌ها: 'dll_exact', 'simple', 'with_terminator', 'iso8583_like', 'simple_tlv'
# پیش‌فرض: 'dll_exact'
POS_MESSAGE_FORMAT=dll_exact

# شماره سریال دستگاه POS
POS_DEVICE_SERIAL_NUMBER=54040919

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# پورت وب سرور (برای Docker)
WEB_PORT=8000

# =============================================================================
# CORS CONFIGURATION (اختیاری - در صورت نیاز به تغییر)
# =============================================================================
# این تنظیمات در settings/base.py به صورت پیش‌فرض تنظیم شده‌اند
# در صورت نیاز می‌توانید از طریق کد تغییر دهید

# =============================================================================
# LOGGING CONFIGURATION (اختیاری)
# =============================================================================
# لاگ‌ها به صورت پیش‌فرض در logs/kiosk.log ذخیره می‌شوند
# می‌توانید سطح لاگ را در settings/base.py تغییر دهید

# =============================================================================
# NOTES
# =============================================================================
# 1. برای Production:
#    - DEBUG=False
#    - SECRET_KEY را تغییر دهید
#    - ALLOWED_HOSTS را با دامنه‌های واقعی تنظیم کنید
#    - DATABASE_PASSWORD را قوی انتخاب کنید
#
# 2. برای Development:
#    - DEBUG=True
#    - از Mock Gateway استفاده کنید (PAYMENT_GATEWAY_NAME=mock)
#
# 3. برای تست پرداخت ناموفق:
#    - MOCK_PAYMENT_SUCCESS=False
#    - یا MOCK_PAYMENT_SUCCESS_RATE=0
#
# 4. برای اتصال به POS واقعی:
#    - PAYMENT_GATEWAY_NAME=pos
#    - POS_TCP_HOST را با IP دستگاه POS تنظیم کنید
#    - POS_USE_DLL=True اگر از Windows استفاده می‌کنید
#    - POS_USE_BRIDGE=True اگر از Mac/Linux به Windows Service متصل می‌شوید
#
# =============================================================================
